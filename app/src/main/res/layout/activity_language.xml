<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LanguageActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/uzmobile_gsm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/btn_uz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="O`zbek"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/btn_ru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/btn_ru"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="Русский"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/btn_uz_krill"
        app:layout_constraintEnd_toEndOf="@id/btn_uz"
        app:layout_constraintStart_toStartOf="@id/btn_uz"
        app:layout_constraintTop_toBottomOf="@id/btn_uz" />

    <Button
        android:id="@+id/btn_uz_krill"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="Ўзбек"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn_uz"
        app:layout_constraintStart_toStartOf="@id/btn_uz"
        app:layout_constraintTop_toBottomOf="@id/btn_ru" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DM Mobile Group"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98" />

</androidx.constraintlayout.widget.ConstraintLayout>